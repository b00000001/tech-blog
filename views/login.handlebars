<div class="field">
    <form class='form login-form'>
        <div class="column is-half">
            <p class='is-size-3'>Please Enter your Login Info</p>
            <p class="control has-icons-left has-icons-right">
                <input class="input" id='email-login' type="email" placeholder="Email">
            </p>
            <div class="field mt-4">
                <p class="control has-icons-left">
                    <input class="input" id='password-login' type="password" placeholder="Password">
                </p>
            </div>
            <div class="form-group">
                <button class="button notification is-link">Login</button>
            </div>
    </form>
    <br>

    <div class="field">
        <h1 class='is-size-3'>Sign Up</h1>
        <label class="label">Username</label>
        <div class="control">
            <input class="input" type="text" id='signUpName'>
        </div>
    </div>

    <div class="field">
        <label class="label">Email</label>
        <div class="control">
            <input class="input is-success" id="signUpEmail" type="text">
        </div>
        <p class="help is-success">This username is available</p>
    </div>

    <div class="field">
        <label class="label">Password</label>
        <div class="control">
            <input class="input is-danger" type="password" id='signUpPassword'>
        </div>
        <p class="help is-danger">This email is invalid</p>
    </div>


    <div class="field is-grouped">
        <div class="control">
            <button class="button is-link" id='signupForm'>Submit</button>
        </div>
        <div class="control">
            <button class="button is-link is-light">Cancel</button>
        </div>
    </div>
</div>
<script src="./js/login.js"></script>